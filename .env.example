# Banco de Dados (Railway PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database

# JWT Secret (gere um aleatório: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-here

# OpenAI (para funcionalidades de IA)
OPENAI_API_KEY=sk-your-openai-api-key

# Clicksign (Assinatura Digital)
CLICKSIGN_API_KEY=your-clicksign-api-key
CLICKSIGN_BASE_URL=https://api.clicksign.com/v3

# Asaas (Cobranças Recorrentes)
ASAAS_API_KEY=your-asaas-api-key
ASAAS_BASE_URL=https://sandbox.asaas.com/api/v3

# Twilio (SMS e WhatsApp)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+5511999999999
TWILIO_WHATSAPP_NUMBER=whatsapp:+5511999999999

# SendGrid (Email)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@seudominio.com

# Webhook do CRM (URL do seu CRM no Render)
CRM_WEBHOOK_URL=https://crm-agencia-api.onrender.com/api/webhooks/contrato-assinado
CRM_WEBHOOK_SECRET=your-webhook-secret-key

# Configurações da Aplicação
PORT=3000
NODE_ENV=production
FRONTEND_URL=https://seu-dominio.vercel.app

